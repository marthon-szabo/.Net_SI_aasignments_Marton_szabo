<Window x:Class="Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{DynamicResource customBg}">
    <Window.Resources>
        <LinearGradientBrush x:Key="customBg">
            <GradientStop Offset="0" Color="AntiqueWhite" />
            <GradientStop Offset="1" Color="GhostWhite" />
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBox Name="txtInput" />
        </StackPanel>
        <WrapPanel Margin="10">
            <TextBlock Text="{Binding Path=Text, ElementName=txtInput}" />
        </WrapPanel>
    </Grid>
</Window>
