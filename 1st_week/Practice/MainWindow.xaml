<Window x:Class="Practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding Path=Text, ElementName=heightInput}" Width="{Binding Path=Text, ElementName=widthInput}" Background="{DynamicResource customBg}">
    <Window.Resources>
        <LinearGradientBrush x:Key="customBg">
            <GradientStop Offset="0" Color="AntiqueWhite" />
            <GradientStop Offset="1" Color="GhostWhite" />
        </LinearGradientBrush>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Dimensions: "/>
            <TextBox Name="widthInput" Text="{Binding Width}" Width="40" Foreground="Red"/>
            <TextBlock Text=" x "/>
            <TextBox Name="heightInput" Text="{Binding Height}" Width="40" Foreground="Blue"/>


        </WrapPanel>


    </Grid>
</Window>
