<Window x:Class=" WpfApp_1st_SI_Practice_.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BindingSample" Height="200" Width="300" Background="{DynamicResource customBg}">
    <Window.Resources>
        <LinearGradientBrush x:Key="customBg">
            <GradientStop Offset="0" Color="AntiqueWhite" />
            <GradientStop Offset="1" Color="GhostWhite" />
        </LinearGradientBrush>
    </Window.Resources>
        <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Name="txtInput" />
        <TextBlock Text="{Binding ElementName=txtInput, Path=Text}" />


    </Grid>
</Window>
